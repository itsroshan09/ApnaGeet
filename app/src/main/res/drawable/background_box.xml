<!-- rounded_rectangle_blue.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the background color -->
    <solid android:color="#D2DFE7F4" /> <!-- Change this color code to your desired shade of blue -->

    <!-- Set the corner radius for rounded corners -->
    <corners android:radius="16dp" /> <!-- Adjust the radius to control the roundness of corners -->
    <stroke android:color="#3F51B5" android:width="2dp"/>
</shape>
