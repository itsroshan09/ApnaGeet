<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSong"
    android:padding="20dp">

    <EditText
        android:id="@+id/editTextMusicName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Music Name"/>

    <EditText
        android:id="@+id/editTextArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextMusicName"
        android:hint="Artist"/>

    <EditText
        android:id="@+id/editTextMusicLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextArtist"
        android:hint="Music Link"/>

    <EditText
        android:id="@+id/editTextBannerLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextMusicLink"
        android:hint="Banner Link"/>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextBannerLink"
        android:layout_centerHorizontal="true"
        android:text="Add"/>

</RelativeLayout>
